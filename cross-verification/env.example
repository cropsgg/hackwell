# Evidence Verification Service Environment Variables

# Service Configuration
SERVICE_NAME=evidence-verification
SERVICE_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/hackwell
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=60

# Embeddings Configuration
EMBEDDINGS_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDINGS_MODEL=text-embedding-3-large
EMBEDDINGS_DIMENSION=3072
EMBEDDINGS_CACHE=true

# Stance Classification Configuration
STANCE_CLASSIFIER=deberta
STANCE_MODEL=microsoft/deberta-base-mnli
STANCE_CONFIDENCE_THRESHOLD=0.5
STANCE_BATCH_SIZE=8

# Retrieval Configuration
K_SEMANTIC=8
K_LEXICAL=8
RRF_K=60
MAX_EVIDENCE_PER_CLAIM=16

# External API Configuration
ENABLE_PUBMED=true
PUBMED_API_KEY=
PUBMED_EMAIL=your-email@example.com
PUBMED_TOOL=hackwell-evidence-verifier
PUBMED_MAX_RETRIES=3
PUBMED_TIMEOUT=30.0

ENABLE_OPENFDA=true
OPENFDA_API_KEY=
OPENFDA_TIMEOUT=30.0

ENABLE_RXNORM=true
RXNORM_TIMEOUT=30.0

ENABLE_ADA=true
ADA_GUIDELINES_FILE=

# Scoring Configuration
EVIDENCE_MIN_SCORE=0.3
CONTRADICT_THRESHOLD=0.55
SUPPORT_THRESHOLD=0.60
CONTRADICT_SAFETY_THRESHOLD=0.40

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics
